# =============================================================================
# CRYPTO INTELLIGENCE SYSTEM - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your API keys

# -----------------------------------------------------------------------------
# API Keys (Required)
# -----------------------------------------------------------------------------
# Groq API - Get from https://console.groq.com/
GROQ_API_KEY=your_groq_key_here

# Reddit API - Get from https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_secret
REDDIT_USER_AGENT=CryptoIntelligence/1.0

# NewsAPI - Get from https://newsapi.org/
NEWS_API_KEY=your_news_api_key

# -----------------------------------------------------------------------------
# LangChain Configuration (Optional)
# -----------------------------------------------------------------------------
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_key
LANGCHAIN_PROJECT=crypto-intelligence

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
POSTGRES_URL=postgresql://user:password@localhost:5432/crypto_intel

# -----------------------------------------------------------------------------
# API Server Settings
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# -----------------------------------------------------------------------------
# Model Settings
# -----------------------------------------------------------------------------
SENTIMENT_MODEL=ProsusAI/finbert
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=mixtral-8x7b-32768

# -----------------------------------------------------------------------------
# Rate Limits (requests per minute unless noted)
# -----------------------------------------------------------------------------
GROQ_RATE_LIMIT=30
REDDIT_RATE_LIMIT=60
CCXT_RATE_LIMIT=1200
BLOCKCHAIN_RATE_LIMIT=20
NEWS_API_RATE_LIMIT=100  # per day

# -----------------------------------------------------------------------------
# Cache TTL (seconds)
# -----------------------------------------------------------------------------
CACHE_WHALE_DATA=60
CACHE_ORDERBOOK=30
CACHE_SENTIMENT=300
CACHE_NEWS=21600
CACHE_SIGNAL=60

# -----------------------------------------------------------------------------
# Exchange Configuration
# -----------------------------------------------------------------------------
DEFAULT_EXCHANGE=binance
FALLBACK_EXCHANGE=coinbase

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
AGENT_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1.0

# -----------------------------------------------------------------------------
# Signal Weights (must sum to 1.0)
# -----------------------------------------------------------------------------
WEIGHT_SENTIMENT=0.40
WEIGHT_ONCHAIN=0.30
WEIGHT_WHALE=0.20
WEIGHT_NEWS=0.10

# -----------------------------------------------------------------------------
# Backtesting
# -----------------------------------------------------------------------------
DEFAULT_INITIAL_CAPITAL=10000.0
DEFAULT_COMMISSION=0.001
