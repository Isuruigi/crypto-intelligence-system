# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# Reddit Configuration (Optional - for sentiment analysis)
# PRAW will use read-only mode if these are not set
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=CryptoIntelligenceBot/1.0

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/signals
REDIS_URL=redis://localhost:6379

# Rate Limits (requests per minute)
REDDIT_RATE_LIMIT=60
CCXT_RATE_LIMIT=1200
BLOCKCHAIN_RATE_LIMIT=20

# Cache TTL (seconds)
CACHE_WHALE_DATA=60
CACHE_ORDERBOOK=30
CACHE_SENTIMENT=300

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
DEBUG=False

# Exchange Configuration
DEFAULT_EXCHANGE=binance
DEFAULT_SYMBOL=BTC/USDT

# Signal Generation Parameters
MIN_CONFIDENCE_THRESHOLD=30
WHALE_TRANSACTION_MIN_USD=1000000
ORDERBOOK_DEPTH_LEVELS=20
SENTIMENT_LOOKBACK_HOURS=24
